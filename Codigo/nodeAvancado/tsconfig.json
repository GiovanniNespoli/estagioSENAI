{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*"  : ["modules/*"],
      "@config/*"   : ["config/*"],
      "@shared/*"   : ["shared/*"]
    },                                      
    "types": [
      "node",
      "@types/jest"
    ],                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "strictPropertyInitialization": false,             
    "useUnknownInCatchVariables": false,              
    "skipLibCheck": true                                
  }
}
